{
  "name": "cline-chat-reader-mcp-server",
  "version": "0.4.0",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "cline-chat-reader": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && node scripts/dev/copy-js-files.js",
    "watch": "tsc -w",
    "start": "node build/index.js",
    "test": "node tests/unit/git/test-git-analyzer.js",
    "test:all": "for f in tests/unit/**/*.js; do node $f; done",
    "cleanup": "bash scripts/dev/cleanup-home-directory.sh",
    "migrate": "bash scripts/dev/migrate-claude-dev-mcp.sh",
    "backup-and-delete": "bash scripts/dev/backup-and-delete-claude-dev-mcp.sh",
    "reorganize": "bash scripts/dev/complete-reorganization.sh",
    "example:git": "node examples/git-examples/unpushed-commits-example.js",
    "example:time": "node examples/time-examples/time-formatting-example.js",
    "example:vscode": "node examples/vscode-examples/workspace-monitoring-example.js",
    "examples": "npm run example:git && npm run example:time && npm run example:vscode"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "chokidar": "^4.0.3",
    "fs-extra": "^11.3.0",
    "jsonpath": "^1.1.1",
    "node-fetch": "^3.3.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "simple-git": "^3.27.0",
    "stream-chain": "^3.4.0",
    "stream-json": "^1.9.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jsonpath": "^0.2.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
